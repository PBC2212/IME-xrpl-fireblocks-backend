{
  "name": "ime-rwa-swap-facility",
  "version": "1.0.0",
  "description": "Swap facility for existing RWA tokens â†’ XRP/USDT with Hummingbot liquidity integration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t ime-rwa-swap .",
    "docker:run": "docker run -p 3000:3000 ime-rwa-swap",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "docs": "jsdoc -c jsdoc.conf.json",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "xrpl",
    "rwa",
    "real-world-assets",
    "swap-facility",
    "hummingbot",
    "liquidity-provision",
    "atomic-swaps",
    "fireblocks",
    "ime-capital"
  ],
  "author": "IME Capital Trust LLC <tech@imecapital.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ime-capital/rwa-xrpl-swap.git"
  },
  "bugs": {
    "url": "https://github.com/ime-capital/rwa-xrpl-swap/issues"
  },
  "homepage": "https://github.com/ime-capital/rwa-xrpl-swap#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "xrpl": "^2.12.0",
    "fireblocks-sdk": "^5.4.0",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "node-cron": "^3.0.3",
    "ioredis": "^5.3.2",
    "bull": "^4.12.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "jsdoc": "^4.0.2",
    "docker": "^1.0.0",
    "@types/node": "^20.9.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js",
      "!**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "tests/",
      "coverage/",
      "docs/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  },
  "optionalDependencies": {
    "pg": "^8.11.3",
    "mysql2": "^3.6.5",
    "sqlite3": "^5.1.6"
  },
  "peerDependencies": {
    "redis": "^4.6.0"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "6.0.0"
    }
  },
  "funding": {
    "type": "corporate",
    "url": "https://imecapital.com/funding"
  },
  "contributors": [
    {
      "name": "IME Development Team",
      "email": "dev@imecapital.com",
      "url": "https://imecapital.com"
    }
  ],
  "directories": {
    "lib": "./services",
    "test": "./tests",
    "doc": "./docs"
  },
  "files": [
    "index.js",
    "services/",
    "routes/",
    "middleware/",
    "utils/",
    "config/",
    "public/",
    "README.md",
    "LICENSE"
  ]
}